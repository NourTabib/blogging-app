@model List<Blog>

<div class="container">
    <h1>Blogs</h1>

    <ul class="list-group">
        @foreach (var blog in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <a href="@Url.Action("BlogDetails","Home", new { id = blog.BlogId })">
                    <div class="col-6">
                        @blog.Url
                    </div>
                    <div class="col-6 text-right">
                        @blog.Category
                    </div>
                </a>
            </li>
        }
    </ul>
</div>