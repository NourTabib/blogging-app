@model Post

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card mb-4">
                <div class="card-body">
                    <h2 class="card-title">@Model.Title</h2>
                    <small class="text-muted">@Model.PublishedDateTime.ToString("MMM dd, yyyy")</small>
                    <p class="card-text">@Model.Content</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h3 class="mb-3">Comments</h3>
            <ul class="list-group">
                @foreach (var comment in Model.Commentaires)
                {
                    <li class="list-group-item">
                        <p>@comment.containt</p>
                        <p>Posted By Nour Allah Tabib</p>
                        <small class="text-muted">@comment.postedOn?.ToString("MMM dd, yyyy")</small>
                    </li>
                }
            </ul>
            <h3>Add a Comment</h3>
            <form asp-controller="Home" asp-action="AddComment" method="post">
                <input type="hidden" name="postId" value="@Model.PostId" />
                <div class="form-group">
                    <label for="content">Content:</label>
                    <textarea name="content" class="form-control"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>